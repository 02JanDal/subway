nav
  flex: 0 0 14em
  order: -1
  width: 14em
  background: #E7E9ED
  border-right: 1px solid #DDDDDD
  padding-top: 20px
  display: flex
  flex-direction: column

.nav-area
  flex: 1
  ul
    padding: 0
    margin: 0

  li
    padding: 10px 0 10px 40px
    list-style-type: none
    &:hover
      cursor: pointer
      background: #A7DBD8
    &.active:hover
      background: #315857
      cursor: default

.active
  background: #315857
  color: white

.server_name, .server_nick
  background: #434950
  padding: 10px 0 10px 40px
  color: white

.server_name
  border-left: 5px solid #FA6900
  border-bottom: 1px solid #666

.server_nick
  border-left: 5px solid #8A9B0F

.unread, .unread_highlight
  padding: 2px 6px
  color: whiteSmoke
  border-radius: 4px
  margin-left: 5px

.unread
  background: #980000
