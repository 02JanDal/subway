*, *::before, *::after
  box-sizing: border-box

html, body
  font-family: 'Open Sans', Helvetica, Arial, sans-serif;
  margin: 0
  padding: 0
  height: 100%
  font-size: 14px
  color: #333333

input
  font-size: 0.9em
  background: #FFF
  border: 1px solid #DBDFE5
  border-radius: 3px
  padding: 10px 15px
  -webkit-font-smoothing: antialiased

strong
  font-weight: 600

.container
  height: 100%
  display: flex

main
  background: whiteSmoke
  flex: 1

.hide
  display: none

.pointer
  cursor: pointer

.faux_a
  &:hover
    cusor: pointer

.spacing-right
  margin-right: 5px

